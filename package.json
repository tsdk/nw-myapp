{
    "name": "nw-myapp",
    "description": "A mini nwjs app",
    "main": "index.html",
    "scripts": {
        "start": "nw .",
		"png2icons": "electron-icon-builder -f --input=ms-icon-310x310.png --output=. ",
		"build": "nwb nwbuild -v 0.37.2-sdk --win-ico icons/icon.ico --mac-icns icons/icon.icns --side-by-side ./dist/"
    },
    "window": {
        "title": "myapp",
        "frame": true,
        "toolbar": false,
        "width": 1024,
        "height": 800,
		"min_width": 800,
		"min_height": 600,
		"resizable": true,
		"as_desktop": true,
		"position": "center",
        "icon": "ms-icon-310x310.png"
    },
    "platformOverrides": {
        "win": {
            "window": {
                "frame": false
            }
        }
    },
    "devDependencies": {
        "electron-icon-builder": "^1.0.0",
        "nwjs-builder": "^1.14.0"
    },
    "dependencies": {
        "nw": "^0.37.2-sdk"
    },
    "license": "MIT",
    "nwjsBuilder": {
        "//1": "Optionally overwrite `name`, `version` and `description`",
        "productName": "",
        "productVersion": "",
        "fileDescription": "",
        "//2": "Other options",
        "//3": "For Windows",
        "copyright": "",
        "internalName": "",
        "fileVersion": "",
        "comments": "",
        "companyName": "",
        "legalTrademarks": "",
        "originalFilename": "",
        "privateBuild": "",
        "specialBuild": "",
        "//4": "For Mac OS X",
        "bundleIdentifier": ""
    }
}
